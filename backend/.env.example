# Slack Helper Bot - Environment Configuration
# Copy this to .env and fill in your actual values
#
# SECURITY NOTES:
# - NEVER commit .env files to version control
# - Use strong, randomly generated keys for JWT_SECRET_KEY and ENCRYPTION_KEY
# - Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# =============================================================================
# REQUIRED - Application will not start without these
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/amebo

# Security Keys (REQUIRED - no defaults for security)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=
ENCRYPTION_KEY=

# AI Configuration
ANTHROPIC_API_KEY=

# =============================================================================
# OPTIONAL - Have sensible defaults
# =============================================================================

# Slack API Credentials (Get from https://api.slack.com/apps)
# Note: These are managed per-workspace through the UI, not globally
# SLACK_BOT_TOKEN=xoxb-your-bot-token-here
# SLACK_APP_TOKEN=xapp-your-app-token-here
# SLACK_SIGNING_SECRET=your-signing-secret-here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (requests per time window)
# Auth endpoints have stricter limits to prevent brute force attacks
# RATE_LIMIT_AUTH_MAX=5
# RATE_LIMIT_AUTH_WINDOW=60
# RATE_LIMIT_API_MAX=100
# RATE_LIMIT_API_WINDOW=60
# RATE_LIMIT_UPLOAD_MAX=10
# RATE_LIMIT_UPLOAD_WINDOW=60

# File Upload Limits
# MAX_UPLOAD_SIZE_MB=50
# MAX_FILES_PER_REQUEST=10

# Email Configuration (for user invitations)
# For Gmail: Use app-specific password, not your regular password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=

# =============================================================================
# DEVELOPMENT ONLY - Never enable in production
# =============================================================================
# DEV_AUTH_ENABLED=false
# DEV_AUTH_EMAIL=
# DEV_AUTH_PASSWORD=